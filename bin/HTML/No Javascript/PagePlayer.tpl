<div class="player {{ClassPlayerStatus}}">
{{Menu}}
<div id="playerdata">
	{{ItemPlayer}}
</div>

<div id="playercontrol">		
	<div class="playerbuttons">
		<a class="button btnplay" href="playercontrol?action=playpause" title="Play"><img src="images/playback-start.png" width="32" height="32" alt="play"></a>
		<a class="button btnpause" href="playercontrol?action=playpause" title="Pause"><img src="images/pause.png" width="32" height="32" alt="pause"></a>
		<a class="button btnstop" href="playercontrol?action=stop" title="Stop playback"><img src="images/playback-stop.png" width="32" height="32" alt="stop"></a>
		<a class="button btnprev" href="playercontrol?action=previous" title="Play the previous title in the playlist"><img src="images/skip-backward.png" width="32" height="32" alt="backward"></a>
		<a class="button btnnext" href="playercontrol?action=next" title="Play the next title in the playlist"><img src="images/skip-forward.png" width="32" height="32" alt="forward"></a>
	</div>	
	<div style="clear:both;"></div>
</div>
</div>