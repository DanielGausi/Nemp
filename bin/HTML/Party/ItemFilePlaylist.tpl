<div ID="js{{ID}}" class="playlistitem {{Class}}">
	<div class="controls">{{BtnFileVote}}</div>
	<div class="index"><span>{{Index}}</span><span class="{{PrebookClass}}"><br>{{PrebookIndex}}</span></div>		
	<div class="title" {{Anchor}}><a  href="playlist_details?id={{ID}}" title="Show more details about this title"><span class="linetitle">{{Title}}</span>&nbsp;<span class="lineduration">({{Duration}})</span><br><span class="lineartist">{{Artist}}</span><br><span class="{{VoteClass}}"><img src="images/votesmall.png" alt="vote">&nbsp;{{Votes}} votes for this track.</span></a></div>	
	<div class="cover">
	<a href="library?mode=album&amp;id={{AlbumID}}" title="Show all titles from this album"><img src="cover?id={{CoverID}}" alt="cover art" height="50"></a></div>	
</div>