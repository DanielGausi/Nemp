<div ID="js{{ID}}" class="libraryitem {{Class}}">
	<div class="controls">{{BtnFileVote}}</div>	
	<div class="title"><a href="library_details?id={{ID}}" title="Show more details about this title"><span class="linetitle">{{Title}}</span>&nbsp;<span class="lineduration">({{Duration}})</span><br> <span class="lineartist">{{Artist}}</span><br><span class="linealbum">{{Album}} (Track {{Track}})</span>
	</a></div>
	<div class="cover">
	<a href="library?mode=album&amp;id={{AlbumID}}" title="Show all titles from this album"><img src="cover?id={{CoverID}}" alt="cover art" height="50"></a></div>
</div>
