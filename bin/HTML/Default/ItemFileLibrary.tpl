<div ID="js{{ID}}" class="listitem {{Class}}" data-mime="{{Mime}}" data-filename="{{Filename}}" data-extension="{{Filetype}}">
	<div class="controls">
		{{BtnFileVote}}{{BtnFileAdd}}{{BtnFileAddNext}}
	</div>	
	<div class="titleinfo"><a href="library_details?id={{ID}}" title="Show more details about this title"><span class="title">{{Title}}</span>&nbsp;<span class="duration">({{Duration}})</span><br> <span class="artist">{{Artist}}</span><br><span class="album">{{Album}} (Track {{Track}})</span>
	</a></div>	

	<div class="browsercontrols">
		{{BtnFilePlayBrowser}}{{BtnIconNowPlaying}}
	</div>			
	
	<div class="cover">
	<a href="library?mode=album&amp;id={{AlbumID}}" title="Show all titles from this album"><img src="cover?id={{CoverID}}" alt="cover art" height="50"></a></div>
</div>
